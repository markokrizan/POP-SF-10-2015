<Window x:Class="WpfApp1.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.UI"
        mc:Ignorable="d"
        Title="Salon Namestaja" Height="500" Width="700"
        ResizeMode="NoResize"
        WindowState="Normal"
        Background="Azure"
        Icon="../Images/furniture-md.png"
        >

    <Grid>
        <DockPanel HorizontalAlignment="Left" Height="25" LastChildFill="False" VerticalAlignment="Top" Width="694" Margin="0,0,-0.4,0">
            <Menu Height="46" VerticalAlignment="Top" Width="692" Margin="0,0,0,-21.2">
                <MenuItem Header="File" Height="25" Width="35" >
                    <MenuItem Header="Test"/>
                </MenuItem>
                <MenuItem Header="Info" Height="25" Width="35" >
                    <MenuItem x:Name="SalonInfo" Header="O Salonu" Click="SalonInfo_Click"/>
                </MenuItem>
            </Menu>

        </DockPanel>
        <TabControl Margin="0,25,-0.4,0.2" Padding="0,0,0,0"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch">

            <TabItem Header="Namestaj" Margin="0,0,-2,-11" >
                <Canvas VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                    <Grid >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="61.6"/>
                            <ColumnDefinition Width="41.2"/>
                            <ColumnDefinition Width="9*"/>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="164*"/>
                        </Grid.ColumnDefinitions>



                        <Grid.RowDefinitions>
                            <RowDefinition Height="23*"/>
                            <RowDefinition Height="7*"/>
                        </Grid.RowDefinitions>
                        <!--<ListBox Name="listBoxNamestaj" Grid.Row="0" FontSize="15"></ListBox> -->

                        <Button Grid.Row="1" Content="Dodaj" FontSize="15" Margin="41.6,366,454.2,-150" Click="DodajNamestaj" Grid.ColumnSpan="4" Grid.Column="1"/>
                        <Button Grid.Row="1" Content="Izmeni" FontSize="15" Margin="0,366,335.2,-150" Click="IzmeniNamestaj" Grid.Column="4" HorizontalAlignment="Right" Width="104"/>
                        <Button Grid.Row="1" Content="Obrisi" FontSize="15" Margin="12,366,48.4,-150" Click="ObrisiNamestaj" Grid.ColumnSpan="2"/>
                        <Button Grid.Row="1" Content="Izlaz" FontSize="15" Margin="381.84,367,19.2,-150" Click="Izlaz" Grid.Column="4"/>
                        <DataGrid Name="dgNamestaj" CanUserAddRows="false" AutoGenerateColumns="False" HorizontalAlignment="Stretch" Height="246" VerticalAlignment="Top" Width="692" Margin="-1,10,0.2,0" Grid.ColumnSpan="5" Grid.Row="1"/>


                    </Grid>



                </Canvas>



            </TabItem>
            <TabItem Header="Usluge" Margin="3,0,-30.6,-11" />
            <TabItem Header="Prodaja" Margin="31.6,0,-59.6,-11" />




        </TabControl>

    </Grid>



</Window>
